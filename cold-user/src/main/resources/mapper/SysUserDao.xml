<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ithema.cold.common.user.dao.SysUserDao">

	<select id="queryByUserName" resultType="com.ithema.cold.common.user.entity.SysUserEntity">
		select * from sys_user where username = #{username}
	</select>
	<select id="queryByUserId" resultType="com.ithema.cold.common.user.entity.SysUserEntity">
		select * from sys_user where user_id = #{userId}
	</select>

</mapper>